<resources>

    <!-- Base application theme. -->


    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@drawable/layout_bg</item>
    </style>

    <style name="home_main">
        <item name="android:background">@drawable/layout_bg</item>
    </style>


    <style name="header">
        <item name="android:background">@drawable/header_bg</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>


    </style>

    <style name="biglabel">
        <item name="android:textColor">@color/colorGrayText</item>
        <item name="android:textSize">30dp</item>
    </style>


    <style name="nex_bt">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/next_icon</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>


    </style>

    <style name="back_bt">

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/back_icon</item>
        <item name="android:layout_marginTop">10dp</item>

    </style>

    <style name="home_bt">
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_marginLeft">15dp</item>

        <item name="android:background">@drawable/home_icon</item>

    </style>

    <style name="subtitle">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>


        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginTop">10dp</item>


        <item name="android:textColor">@color/colorBlueText</item>
        <item name="android:textSize">45dp</item>
    </style>


    <style name="subtitlegreen" parent="subtitle">
        <item name="android:textColor">@color/colorGreenText</item>


    </style>


    <style name="button">


        <item name="android:textColor">@color/colorGrayText</item>
        <item name="android:textSize">50dp</item>
        <item name="android:background">@color/nullColor</item>


    </style>

    <style name="itempanl">
        <item name="android:background">@drawable/item_bg</item>
        <item name="android:layout_height">80dp</item>


    </style>


    <style name="light_panel">
        <item name="android:background">@drawable/light_bg</item>
        <item name="android:layout_height">220dp</item>


    </style>


    <style name="data_img">

        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="data_img_right" parent="data_img">
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">40dp</item>
    </style>

    <style name="data_img_center" parent="data_img">
        <item name="android:layout_centerHorizontal">true</item>


    </style>


    <style name="data_img_left" parent="data_img">
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_marginLeft">40dp</item>

    </style>


</resources>
