<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="app.memory_games_app.view_items">

    <RelativeLayout
        style="@style/home_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:id="@+id/lightPanel"
            style="@style/light_panel"
            android:layout_width="match_parent"

            >


            <TextView
                android:id="@+id/welcome_txt"
                style="@style/subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="30dp"
                android:text="@string/welcome" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/welcome_txt"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:scaleType="fitCenter"
                android:src="@drawable/logo" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/row1"
            style="@style/itempanl"
            android:layout_width="match_parent"
            android:layout_below="@+id/lightPanel"

            android:layout_gravity="right">

            <ImageView
                android:id="@+id/v_image_data_1"
                style="@style/data_img_right"
                android:src="@drawable/image_date_1"
                />

            <ImageView
                android:id="@+id/v_image_data_3"
                style="@style/data_img_left"

                android:src="@drawable/image_date_3" />

            <ImageView
                android:id="@+id/v_image_data_2"
                style="@style/data_img_center"
                android:src="@drawable/numbers_icon" />

        </RelativeLayout>


        <RelativeLayout
            style="@style/itempanl"
            android:id="@+id/row2"

            android:layout_width="match_parent"
            android:layout_below="@+id/row1">



            <ImageView
                android:id="@+id/v_image_data_4"
                style="@style/data_img_right"
                android:src="@drawable/numbers_icon"
                />

            <ImageView
                android:id="@+id/v_image_data_5"
                style="@style/data_img_left"

                android:src="@drawable/numbers_icon" />

            <ImageView
                android:id="@+id/v_image_data_6"
                style="@style/data_img_center"
                android:src="@drawable/numbers_icon" />









        </RelativeLayout>




        <RelativeLayout
            style="@style/itempanl"

            android:id="@+id/row3"
            android:layout_width="match_parent"
            android:layout_below="@+id/row2">



            <ImageView
                android:id="@+id/v_image_data_7"
                style="@style/data_img_right"
                android:src="@drawable/numbers_icon"
                />

            <ImageView
                android:id="@+id/v_image_data_8"
                style="@style/data_img_left"

                android:src="@drawable/numbers_icon" />

            <ImageView
                android:id="@+id/v_image_data_9"
                style="@style/data_img_center"
                android:src="@drawable/numbers_icon" />









        </RelativeLayout>








        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

</RelativeLayout>
